                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Social Network", "Index", "Home", null, new { @class = "navbar-brand" })
                <!-- <a class="navbar-brand" href="#">NetworkGraph</a> -->
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "active" })</li>
                    <li>@Html.ActionLink("Workspace Info", "RunHelper", "Home")</li>
                   <!-- <li>@Html.ActionLink("About", "About", "Home")</li> -->
                   <!-- <li>@Html.ActionLink("Contact", "Contact", "Home")</li> -->
                   <!-- <li>@Html.ActionLink("Social Network", "ViewSocialNetwork", "Home")</li> -->
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Utilities <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a class="toggleTables">Toggle Tables</a></li>
                            <li>@Html.ActionLink("Display Reports", "DisplayReports", "Home")</li>
                            <li>@Html.ActionLink("Display Report", "DisplayReport", "Home")</li>
                            <li role="separator" class="divider"></li>
                            <li class="dropdown-header">Nav header</li>
                            <li>@Html.ActionLink("Display Reports", "DisplayReports", "Home")</li>
                            <li>@Html.ActionLink("Display Report", "DisplayReport", "Home")</li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li></li>
                </ul>
            </div><!--/.nav-collapse -->

                <!-- Main component for a primary marketing message or call to action -->

            </div>
    </div>
    <div class="tall-container body-content" id="tall">
    


    @RenderBody()
        </div>

    <div class="container body-content">

        <hr />
        <div id="footer">
            <p class="copyright">
                © Copyright 
            </p>
            <p class="location">
                Myself
            </p>
            <p class="tagline">
                Myself
            </p>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/app")

    @RenderSection("scripts", required: false)
    
</body>
</html>
